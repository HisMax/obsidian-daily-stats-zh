{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "ES2020",
      "DOM.Iterable"
    ],
    "jsx": "react",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ]
}